header
  padding 4px 0 10px
  border-bottom 1px solid #555
  background rgba(black, 50%) linear-gradient(to top, rgba(black, 50%) 0px, transparent 10px)
  color #999
  text-shadow 0 0 5px black

.inside-header
  position relative

a.logo
  display inline-block
  width 267px
  height 71px
  margin-left -8px
  background url('../images/logo.png')
  color transparent
  text-shadow none

h1
  margin 0
  font-weight normal
  text-transform uppercase
  font-size 18px

.menu
  top 0
  right 0
  padding 0
  margin 12px 0 0
  position absolute
  list-style none

.menu-item
  margin-left 50px
  float left

a.menu-link
  display inline-block
  text-align center
  &:link
  &:visited
    color #999
  &:hover
    color #CCC
    text-decoration none

.menu-icon
  display block
  font-size 48px
  line-height 52px
