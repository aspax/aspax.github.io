$defaultColor = #F0E7D5
$codeBgColor  = #1D1F21

body
  color $defaultColor
  background #252525 url('../images/asphalt.png')
  font 16px/1.5em 'Open Sans', sans-serif
  margin 0

h2
h3
  font-weight normal
  line-height 2em
  margin 1em 0 0.5em

h2
  border-top 1px solid #666
  background-image radial-gradient(farthest-side at center top, rgba(black, 50%) -200%, transparent 100%)
  &:before
    content ''
    display block
    position relative
    top -2px
    height 1px
    background black

h2
  font-size 200%

h3
  font-size 150%

hr
  border none
  height 6px
  background transparent linear-gradient(-45deg, transparent 25%, #666 25%, #666 50%, transparent 50%, transparent 75%, #666 75%, #666 100%)
  background-size 6px 6px

code
  font 18px 'Ubuntu Mono'
  color darken(desaturate($defaultColor, 60%), 20%)
  background rgba($codeBgColor, 50%)
  border 1px solid #444
  border-radius 4px
  padding 2px 4px

pre
  background $codeBgColor
  border-radius 4px
  box-shadow 0 0 10px rgba(black, 80%) inset
  padding 10px
  overflow-x auto
  > code
    background transparent
    border none
    border-radius 0
    padding 0
    line-height 100%
    margin-top -2px
    margin-bottom -2px

a
  &:link
    color #F2B047
    text-decoration none
  &:visited
    color #E06753
  &:hover
    text-decoration underline

.wrapper
  width 920px
  margin 0 auto

@import 'header'
@import 'footer'
