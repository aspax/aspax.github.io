footer
  border-top 1px solid #555
  background rgba(black, 50%) linear-gradient(to bottom, rgba(black, 50%) 0px, transparent 10px)
  padding 8px 0
  font-size 75%
  color #666
  @media (max-width: 940px)
    text-align center
    font-size 100%

  a
    &:link
      color desaturate(#F2B047, 70%)
    &:visited
      color desaturate(#E06753, 70%)

.notice
  float left
  @media (max-width: 940px)
    float none

.platforms
  float right
  @media (max-width: 940px)
    float none
    &:before
      content ''
      display block
      border-top 1px solid black
      border-bottom 1px solid #333
